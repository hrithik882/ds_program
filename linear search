#include <stdio.h>
int main()
{
    int a[10];
    int n, i, num;
    printf("enter the size of array \n");
    scanf("%d", &n);
    printf("enter the element of array \n");
    for (i = 0; i < n; i++)
    {
        scanf("%d", &a[i]);
    }
    printf("enter the number that you want to search \n");
    scanf("%d", &num);
    for (i = 0; i < n; i++)
    {
        if (num == a[i])
        {
            printf("number is found at %d location \n", i + 1);
            printf("number is found at %d index", i);
            break;
        }
    }
    if (i == n)
    {
        printf("NUMBER IS NOT FOUND IN THIS ARRAY");
    }
    return 0;
}
